<!-- views/reviews-edit.handlebars -->

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <form method="POST" action="/reviews/{{review._id}}?_method=PUT">

        <fieldset>
          <legend>Edit Review</legend>
          <!-- TITLE -->
          <div class="form-group">
            <label for="review-title">Title</label>
            <input class="form-control" id="review-title" type="text" name="title" value="{{review.title}}"/>
          </div>

          <!-- MOVIE TITLE -->
          <div class="form-group">
            <label for="movie-name">Movie Name</label>
            <input class="form-control" name="movieTitle" type="text" value="{{review.movieTitle}}" readonly/>
          </div>

          <!-- RATING -->
          <div class="form-group">
            <label for="rating">Rating</label>
            <select id="rating" name="rating" class="form-control">
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5" selected>5</option>
            </select>
          </div>

          <script>
          // select current movie rating in the form
            if (`{{review.rating}}`)
              document.getElementById('rating').selectedIndex = `{{review.rating}}`;
          </script>

          <!-- DESCRIPTION -->
          <div class="form-group">
            <label for="review-description">Description</label>
            <textarea class="form-control" id="review-description" name="description" rows="10" />{{review.description}}</textarea>
          </div>
          </fieldset>

        <!-- BUTTON -->
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Save Review</button>
          <a class="btn btn-link" href="/reviews/{{review._id}}">Cancel</a>
        </div>

        <input type="hidden" class="form-control" name="movieId" value="{{review.movieId}}">

      </form>
    </div>
  </div>
</div>
