<!-- reviews-index -->
<h2>Reviews</h2>

<div class="row">
	{{#each reviews}}
	<div class="col-md-3">
		<div class="card">
		<div class="card-body">
			<div style="clear: both">
				<h6 style="float: left" class="card-subtitle">({{this.rating}}/5)</h6>
				<h6 style="float: right" class="card-subtitle">{{this.movieTitle}}</h6>
			</div>
			<hr />
			<h4 class="card-text">{{this.title}}</h4>
  			<a href="/reviews/{{this._id}}" class="stretched-link"></a>
  		</div>
  		</div>
  	</div>
	{{/each}}
</div>