<h1>Now Playing</h1>
<div class="row">
    {{#each movies as |movie|}}
        <div class="card">
            <div class="col-md-3 card-body">
                <h4 class="card-title">{{movie.title}}</h4>
                <div class="container">
                	{{#each movie.genre_names as |genre|}}
                		<span class="badge badge-pill badge-light">
                			{{genre}}
                		</span>
               		{{/each}}
                </div>
                <a href="/movies/{{movie.id}}"><img alt="{{movie.title}}" src="https://image.tmdb.org/t/p/w300{{movie.poster_path}}" title="{{movie.title}}"></a>
            </div>
        </div>
    {{/each}}
</div>
